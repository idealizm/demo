{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "dom.iterable",
      "esnext",
      "esnext.asynciterable"
    ]
  },
  "include": ["src"],
  "exclude": ["src/types/graphql-global-types.ts", "node_modules"]
}
